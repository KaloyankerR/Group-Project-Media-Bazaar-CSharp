@model WebApp.Pages.Account.EditModel
@{
}

<h1>Edit User</h1>
<form method="post">
    <input type="hidden" asp-for="@Model.User.UserID" value="@Model.User.UserID" />
    <input type="hidden" asp-for="@Model.User.Email" value="@Model.User.Email" />
    <input type="hidden" asp-for="@Model.User.Address" value="@Model.User.Address" />
    <input type="hidden" asp-for="@Model.User.Gender" value="@Model.User.Gender" />
    <input type="hidden" asp-for="@Model.User.BSN" value="@Model.User.BSN" />
    <input type="hidden" asp-for="@Model.User.UserType" value="@Model.User.UserType" />
    <input type="hidden" asp-for="@Model.User.Department" value="@Model.User.Department" />
    <input type="hidden" asp-for="@Model.User.DateOfBirth" value=@Model.User.DateOfBirth />
    <input type="hidden" asp-for="@Model.User.Password" value=@Model.User.Password />


    <h3>Personal details</h3>
    <div>
        <label for="firstName">First Name:</label>
        <input type="text" asp-for="@Model.User.FirstName" value="@Model.User.FirstName" />
    </div>
    <br/>
    <div>
        <label for="lastName">Last Name:</label>
        <input type="text" asp-for="@Model.User.LastName" value="@Model.User.LastName" />
    </div>
    <br/>

    @*<div>
    <label for="password">Password:</label>
    <input type="password" asp-for="User.Password" id="password" value="@Model.User.Password" />
    <button type="button" onclick="togglePasswordVisibility()">See password</button>
    </div>*@

    <div>
        <label>Date of Birth:</label>
        <input asp-for="@Model.Date" type="text" value="@Model.User.DateOfBirth.ToShortDateString()" readonly />
        @*<input type="text" asp-for="User.DateOfBirth.Day" value="@Model.User.DateOfBirth.Day" />
