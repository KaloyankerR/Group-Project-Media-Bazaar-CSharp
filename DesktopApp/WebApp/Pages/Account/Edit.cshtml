        <input type="text" asp-for="User.DateOfBirth.Year" value="@Model.User.DateOfBirth.Year" />*@
    </div>
    <br/>
    <div>
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" asp-for="@Model.User.PhoneNumber" value="@Model.User.PhoneNumber" />
    </div>
    <br/>
    <br />
    <h3>Address</h3>
    <input type="hidden" asp-for="@Model.User.Address.AddressID" value="@Model.User.Address.AddressID" />

    <br />
    <div>
        <label for="streetName">Street Name:</label>
        <input type="text" asp-for="@Model.User.Address.StreetName" value="@Model.User.Address.StreetName" />
    </div>
    <br />
    <div>
        <label for="houseNumber">House Number:</label>
        <input type="text" asp-for="@Model.User.Address.HouseNumber" value="@Model.User.Address.HouseNumber" />
    </div>
    <br />
    <div>
        <label for="zipCode">ZIP Code:</label>
        <input type="text" asp-for="@Model.User.Address.ZIPCode" value="@Model.User.Address.ZIPCode" />
    </div>
    <br />
    <div>
        <label for="city">City:</label>
        <input type="text" asp-for="@Model.User.Address.City" value="@Model.User.Address.City" />
    </div>
    <br />
    <div>
        <label for="country">Country:</label>
        <input type="text" asp-for="@Model.User.Address.Country" value="@Model.User.Address.Country" />
    </div>
    <br />



    <button type="submit" class="btn btn-primary">Save Changes</button>
    <button href="#" onclick="history.back();" class="btn btn-secondary">Cancel</button>
</form>

